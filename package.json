    "grunt-simple-mocha": "^0.4.0",
    "jscs-stylish": "^0.3.1",
    "jshint-stylish": "^1.0.0",
    "load-grunt-tasks": "^2.0.0",
    "minifyify": "^6.1.0",
    "mocha": "^2.1.0",
    "nodemon": "^1.3.6",
    "proxyquire": "^1.3.1",
    "restler": "^3.2.2",
