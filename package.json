    "prod": "NODE_ENV=production nodemon ./bin/www",
    "build:js": "browserify -d -t [ nunjucksify --extension .tmpl ] -p [minifyify --compressPath . --map app.min.map --output public/js/app.min.map ]  ./public/js/client-app.js > ./public/js/app.min.js",
    "build:css": "stylus -c -I ./public/stylus < ./public/stylus/app.styl > ./public/css/app.min.css",
    "build": "npm run build:js && npm run build:css",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "watch": "grunt watch",
    "watch:lib": "grunt watch:lib",
    "watch:client": "grunt watch:client",
    "watch:tests": "grunt watch:tests",
    "lint": "grunt lint",
    "pretest": "grunt lint",
    "test": "grunt test"
  },
  "author": "K.Adam White <adam@kadamwhite.com> (http://www.kadamwhite.com/)",
