<div class="trains down">
  {% for train in directions['0'] | reverse %}
  <span
    class="train {{ 'scheduled' if train.scheduled }}"
    title="{{ train.message }}">
  </span>
  {% endfor %}
</div>
<a class="button" href="">
  <h2>{{ station.name }}</h2>
</a>
<div class="trains up">
  {% for train in directions['1'] %}
  <span
    class="train {{ 'scheduled' if train.scheduled }}"
    title="{{ train.message }}">
  </span>
  {% endfor %}
</div>
