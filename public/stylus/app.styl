@import 'lib/normalize';
@import 'lib/skeleton';
@import 'mixins';

// MBTA Colors
// ==============================================

// http://en.wikipedia.org/wiki/Template_talk:MBTA_color
$mbta-red = #fa2d27;    // (formerly #c80000)
$mbta-orange = #fd8a03; // (formerly #fe6700)
$mbta-green = #008150;  // (formerly #11773c)
$mbta-blue = #2f5da6;   // (formerly #00009c)
$mbta-silver = #9a9c9d; // (formerly #8d8787)
$mbta-rail = #9d1582;   // (formerly #b60ea0)
$mbta-boats = #06f;

// Depends on mixins and colors
// @import 'lib/spinkit-rotating-plane';


// Global Styles
// ==============================================

// See http://static.incompl.com/awful
* {
  box-sizing: border-box;
  overflow: auto;
}

body {
  font-family: 'Lucida Grande', 'Helvetica Neue', Arial, sans-serif;
}

a {
  text-decoration: none;
}


// Header
// ==============================================

.top-nav {
  padding: 5px 10px;
  margin-bottom: 10px;
  width: 100%;
  border-bottom: 1px solid #e1e1e1;

  h1, p {
    margin: 0;
    font-size: 2.5rem;
  }
}


// List Buttons
// ==============================================

// Mixin
mbta-color( $color ) {
  background-color: $color;
  border-color: $color;

  &:hover {
    background-color: darken( $color, 20% );
    border-color: darken( $color, 20% );
  }
}

.station,
.line {
  display: block;
  height: auto;
  padding: 0;
  text-transform: none;

  h2, h3, p {
    padding: 5px 10px;
    margin: 0;
    font-size: 2rem;
  }

  a {
    display: block;
    color: white;
  }

  // Per-list-item coloring (class goes on <li>)
  &.red {
    mbta-color( $mbta-red );
  }
  &.orange {
    mbta-color( $mbta-orange );
  }
  &.blue {
    mbta-color( $mbta-blue );
  }
}

// Per-list coloring (class goes on <ul>)
.stations {
  &.red li {
    mbta-color( $mbta-red );
    &.branch { border-left: 10px solid darken( $mbta-red, 10% ); }
  }
  &.orange li {
    mbta-color( $mbta-orange );
    &.branch { border-left: 10px solid darken( $mbta-orange, 10% ); }
  }
  &.blue li {
    mbta-color( $mbta-blue );
    &.branch { border-left: 10px solid darken( $mbta-blue, 10% ); }
  }

  li.branch, li.branch:hover {
    list-style-type: none;
    background-color: $white;
    text-align: right;

    ul {
      margin-left: 1.5rem;
      margin-bottom: 0;
    }
  }
}
