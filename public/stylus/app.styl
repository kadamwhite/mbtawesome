@import 'lib/normalize';
@import 'lib/skeleton';
@import 'mixins';

// MBTA Colors
// ==============================================

// http://en.wikipedia.org/wiki/Template_talk:MBTA_color
$mbta-red = #fa2d27;    // (formerly #c80000)
$mbta-orange = #fd8a03; // (formerly #fe6700)
$mbta-green = #008150;  // (formerly #11773c)
$mbta-blue = #2f5da6;   // (formerly #00009c)
$mbta-silver = #9a9c9d; // (formerly #8d8787)
$mbta-rail = #9d1582;   // (formerly #b60ea0)
$mbta-boats = #06f;

$scheduled-trip = #666;

// Depends on mixins and colors
@import 'lib/spinkit-rotating-plane';


// Global Styles
// ==============================================

// See http://static.incompl.com/awful
* {
  box-sizing: border-box;
  // overflow: auto;
}

body {
  font-family: 'Lucida Grande', 'Helvetica Neue', Arial, sans-serif;
}

a {
  text-decoration: none;
  color: $mbta-blue;

  &:hover {
    color: $mbta-orange;
  }
}


// Header
// ==============================================

.site-title {
  cursor: pointer;
}

.top-nav {
  padding: 5px 10px;
  margin-bottom: 20px;
  width: 100%;
  border-bottom: 1px solid #e1e1e1;

  h1, p {
    margin: 0;
    font-size: 2.5rem;
  }
}

// Footer
// ==============================================
.footer {
  padding: 5px 10px;
  margin-top: 25px;
  width: 100%;
  border-top: 1px solid #e1e1e1;

  p {
    margin: 0;
    font-size: 1.5rem;
  }
}

// Container
// ==============================================

.container {
  min-height: 300px;
}

// List Buttons
// ==============================================

// Mixin
mbta-color( $color ) {
  background-color: $color;
  border-color: $color;

  &:focus, &:hover, &:active {
    background-color: darken( $color, 20% );
    border-color: darken( $color, 20% );
  }
}

coloring( $color ) {
  .button {
    mbta-color( $color );
  }
  .branch {
    border-left: 10px solid darken( $color, 10% );
  }
}

// Train Indicators
triangle-up( $size = 20px ) {
  width: 0;
  height: 0;
  border-left: ( $size / 2 ) solid transparent;
  border-right: ( $size / 2 ) solid transparent;
  border-bottom: ( $size / 2 ) solid black;
}

triangle-down( $size = 20px ) {
  width: 0;
  height: 0;
  border-left: ( $size / 2 ) solid transparent;
  border-right: ( $size / 2 ) solid transparent;
  border-top: ( $size / 2 ) solid black;
}

.station,
.line {
  list-style-type: none;
  height: auto;
  padding: 0;
  text-transform: none;
  text-align: center;

  h2, h3, p {
    padding: 0;
    margin: 0;
    font-size: 2rem;
    letter-spacing: -.1rem;

    &.button {
      display: block;
      font-size: 2rem;
      font-weight: inherit;
    }
  }

  a {
    display: block;
    padding: 0 5px;
    color: white;
  }
}

// Coloring for home screen line links
.line {
  // Per-list-item coloring (class goes on <li>)
  &.red {
    mbta-color( $mbta-red );
  }
  &.orange {
    mbta-color( $mbta-orange );
  }
  &.blue {
    mbta-color( $mbta-blue );
  }
}

// Per-list coloring (class goes on <ul>)
.stations {

  li {
    list-style-type: none;
  }

  // .station li's get 0 bottom padding due to .train divs
  .station {
    margin-bottom: 0;
  }

  .button {
    margin: 0;
    color: white;
  }

  &.red {
    coloring( $mbta-red );
  }
  &.orange {
    coloring( $mbta-orange );
  }
  &.blue  {
    coloring( $mbta-blue );
  }

  ul.branches {
    margin: 0;
    background-color: $white;
    text-align: right;

    ul {
      margin-left: 1.5rem;
      margin-bottom: 0;
    }
  }
}

.divider-blue,
.divider-green,
.divider-orange,
.divider-red {
  border: none;
  border-top: 5px solid;
}
.divider-blue { border-top-color: $mbta-blue; }
.divider-green { border-top-color: $mbta-green; }
.divider-orange { border-top-color: $mbta-orange; }
.divider-red { border-top-color: $mbta-red; }

.trains {
  overflow: hidden;
  height: 13px;

  .train {
    display: inline-block;
    overflow: visible;
  }

  &.up {
    margin: 3px 0 0;
    text-align: left;
    .train {
      vertical-align: top;
      triangle-up();

      &.scheduled {
        border-bottom-color: $scheduled-trip;
      }
    }
  }
  &.down {
    margin: 0 0 3px 0;
    text-align: right;
    .train {
      vertical-align: top;
      triangle-down();

      &.scheduled {
        border-top-color: $scheduled-trip;
      }
    }
  }
}

// Station Detail View
// ==============================================

.arrival-predictions {
  list-style: none;

  li {
    margin-bottom: 3.5rem;
  }

  table {
    width: 100%;
  }

  h3 {
    margin-top: 3.5rem;
    margin-bottom: 2rem;
  }

  td {
    padding-top: 10px;
    padding-bottom: 10px;
  }

  th {
    padding-top: 0;
    padding-bottom: 10px;
    width: 50%;
  }

  &.blue {
    td, th { border-color: lighten( $mbta-blue, 40% ); }
  }
  &.green {
    td, th { border-color: lighten( $mbta-green, 40% ); }
  }
  &.orange {
    td, th { border-color: lighten( $mbta-orange, 40% ); }
  }
  &.red {
    td, th { border-color: lighten( $mbta-red, 40% ); }
  }

  .scheduled {
    color: $scheduled-trip;
  }
}

// Alerts
// ==============================================

.alert-list {
  ul,
  .alerts-minimize {
    display: none;
  }

  ul {
    padding: 0;
    list-style: none;
  }

  .alert-type {
    padding-bottom: 5px;
    margin-bottom: 5px;
    border-bottom: 1px solid #e1e1e1;
  }

  hr {
    margin: 5px 0;
  }

  button {
    width: 100%;
    padding: 0 10px;
    margin-bottom: 30px;
    text-align: left;
  }
}
.alert-list-open {
  ul,
  .alerts-minimize {
    display: block;
  }
  .alerts-expand {
    display: none;
  }
}

.alert-icon {
  width: 21px;
  height: 26px;
  display: inline-block;
  background: center top no-repeat;
  background-size: 21px 21px;
  vertical-align: middle
}

.alert-severe {
  background-image: url( '/images/alert-severe.png' );
}
.alert-moderate {
  background-image: url( '/images/alert-moderate.png' );
}
.alert-minor {
  background-image: url( '/images/alert-minor.png' );
}
