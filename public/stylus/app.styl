@import 'lib/normalize';
@import 'lib/skeleton';
@import 'mixins';

// MBTA Colors
// ==============================================

// http://en.wikipedia.org/wiki/Template_talk:MBTA_color
$mbta-red = #fa2d27;    // (formerly #c80000)
$mbta-orange = #fd8a03; // (formerly #fe6700)
$mbta-green = #008150;  // (formerly #11773c)
$mbta-blue = #2f5da6;   // (formerly #00009c)
$mbta-silver = #9a9c9d; // (formerly #8d8787)
$mbta-rail = #9d1582;   // (formerly #b60ea0)
$mbta-boats = #06f;

$scheduled-trip = #666;

// Depends on mixins and colors
@import 'lib/spinkit-rotating-plane';


// Global Styles
// ==============================================

// See http://static.incompl.com/awful
* {
  box-sizing: border-box;
  // overflow: auto;
}

body {
  font-family: 'Lucida Grande', 'Helvetica Neue', Arial, sans-serif;
}

a {
  text-decoration: none;
  color: $mbta-blue;

  &:hover {
    color: $mbta-orange;
  }
}


// Header
// ==============================================

.site-title {
  cursor: pointer;
}

.top-nav {
  margin-bottom: 25px;
  width: 100%;
  border-bottom: 1px solid #e1e1e1;

  h1, p {
    margin: 0;
    font-size: 2.5rem;
    +respond-above($md-screen) { font-size: 3.5rem; }
  }
}

// Footer
// ==============================================
.footer {
  padding: 5px 10px;
  margin-top: 25px;
  width: 100%;
  border-top: 1px solid #e1e1e1;

  p {
    margin: 0;
    font-size: 1.5rem;
  }
}

.top-nav,
.footer {
  padding: 5px 10px;
  +respond-above($sm-screen) { padding: 10px 20px; }
  +respond-above($md-screen) { padding: 20px 20px; }
}

// Container
// ==============================================

.container {
  min-height: 300px;
}

// List Buttons
// ==============================================

// Mixin
mbta-color( $color ) {
  background-color: $color;

  &:focus, &:hover, &:active {
    background-color: darken( $color, 20% );
  }
}

coloring( $color ) {
  .button {
    mbta-color( $color );
  }
  .branch {
    border-left: 10px solid $color;
  }
}

.station,
.line {
  list-style-type: none;
  height: auto;
  padding: 0;
  text-transform: none;
  text-align: center;

  h2, h3, p {
    padding: 0;
    margin: 0;
    font-size: 2rem;
    letter-spacing: -.1rem;

    &.button {
      display: block;
      font-size: 2rem;
      font-weight: inherit;
    }
  }

  a {
    display: block;
    padding: 0 5px;
    color: white;
  }
}

// Coloring for home screen line links
.line {
  // Per-list-item coloring (class goes on <li>)
  &.red {
    mbta-color( $mbta-red );
  }
  &.orange {
    mbta-color( $mbta-orange );
  }
  &.blue {
    mbta-color( $mbta-blue );
  }

  // On larger screens, make the home page buttons bigger
  &.columns .button {
    +respond-above($sm-screen) { padding: 3rem 0; }
    +respond-above($md-screen) {
      font-size: 2.5rem;
      padding: 6rem 0;
    }
    +respond-above($lg-screen) {
      font-size: 3rem;
      padding: 8rem 0;
    }
  }
}

// Per-list coloring (class goes on <ul>)
.stations {

  li {
    list-style-type: none;
  }

  // .station li's get 0 bottom padding due to .train divs
  .station {
    margin-bottom: 0;
  }

  .button {
    margin: 0;
    border: 0;
    color: white;
  }

  &.red {
    coloring( $mbta-red );
  }
  &.orange {
    coloring( $mbta-orange );
  }
  &.blue  {
    coloring( $mbta-blue );
  }

  ul.branches {
    margin: 0;
    background-color: $white;
    text-align: right;

    ul {
      margin-left: 1.5rem;
      margin-bottom: 0;
    }
  }
}

// Transfer indicators
// ==============================================

xfer-border( $color, $color2 = $color ) {
  border-right: 10px solid $color;
  border-left: 10px solid $color2;
  +respond-above($md-screen) {
    border-right: 20px solid $color;
    border-left: 20px solid $color2;
  }
}

// These go in .stations as well, for specificity parity
.stations {
  .xfer-blue {
    xfer-border( $mbta-blue );
  }
  .xfer-green {
    xfer-border( $mbta-green );
  }
  .xfer-orange {
    xfer-border( $mbta-orange );
  }
  .xfer-rail {
    xfer-border( $mbta-rail );
  }
  .xfer-silver {
    xfer-border( $mbta-silver );
  }
  .xfer-red {
    xfer-border( $mbta-red );
  }
  .xfer-green.xfer-rail {
    xfer-border( $mbta-rail, $mbta-silver );
  }
  .xfer-orange.xfer-silver {
    xfer-border( $mbta-orange, $mbta-silver );
  }
  .xfer-rail.xfer-silver {
    xfer-border( $mbta-rail, $mbta-silver );
  }
  .xfer-red.xfer-silver {
    xfer-border( $mbta-rail, $mbta-silver );
  }
}

// Themed Dividers
// ==============================================

.divider-blue,
.divider-green,
.divider-orange,
.divider-red {
  border: none;
  border-top: 5px solid;
}
.divider-blue { border-top-color: $mbta-blue; }
.divider-green { border-top-color: $mbta-green; }
.divider-orange { border-top-color: $mbta-orange; }
.divider-red { border-top-color: $mbta-red; }

// Train Icons
// ==============================================

.trains {
  overflow: hidden;
  height: 13px;

  $arrow-size = 10px;

  .train {
    display: inline-block;
    overflow: visible;
    width: 0;
    height: 0;
    vertical-align: top;
    border-left: $arrow-size solid transparent;
    border-right: $arrow-size solid transparent;
  }

  &.up {
    margin: 3px 0 0;
    text-align: left;
    .train {
      border-bottom: $arrow-size solid black;

      &.scheduled {
        border-bottom-color: $scheduled-trip;
      }
    }
  }

  &.down {
    margin: 0 0 3px 0;
    text-align: right;
    .train {
      border-top: $arrow-size solid black;

      &.scheduled {
        border-top-color: $scheduled-trip;
      }
    }
  }
}

// Station Detail View
// ==============================================

.arrival-predictions {
  list-style: none;
  // Clear the columns, when floated on larger screens
  overflow: hidden;

  li {
    // Two-column layout at larger screen sizes
    // Note: can't use @extend with multiple classes
    +respond-above($md-screen) {
      float: left;
      width: 48%;
      margin-left: 4%;
      &:first-child {
        margin-left: 0;
      }
    }
    margin-bottom: 3.5rem;
  }

  table {
    width: 100%;
  }

  h3 {
    margin-top: 3.5rem;
    margin-bottom: 2rem;
  }

  td {
    padding-top: 10px;
    padding-bottom: 10px;
  }

  th {
    padding-top: 0;
    padding-bottom: 10px;
    width: 50%;
  }

  &.blue {
    td, th { border-color: lighten( $mbta-blue, 40% ); }
  }
  &.green {
    td, th { border-color: lighten( $mbta-green, 40% ); }
  }
  &.orange {
    td, th { border-color: lighten( $mbta-orange, 40% ); }
  }
  &.red {
    td, th { border-color: lighten( $mbta-red, 40% ); }
  }

  .scheduled {
    color: $scheduled-trip;
  }
}

// Alerts
// ==============================================

.alert-list {
  ul,
  .alerts-minimize {
    display: none;
  }

  ul {
    padding: 0;
    list-style: none;
  }

  .alert-type {
    padding-bottom: 5px;
    margin-bottom: 5px;
    border-bottom: 1px solid #e1e1e1;
  }

  hr {
    margin: 5px 0;
  }

  button {
    width: 100%;
    padding: 0 10px;
    margin-bottom: 30px;
    text-align: left;
  }
}
.alert-list-open {
  ul,
  .alerts-minimize {
    display: block;
  }
  .alerts-expand {
    display: none;
  }
}

.alert-icon {
  width: 21px;
  height: 26px;
  display: inline-block;
  background: center top no-repeat;
  background-size: 21px 21px;
  vertical-align: middle
}

.alert-severe {
  background-image: url( '/images/alert-severe.png' );
}
.alert-moderate {
  background-image: url( '/images/alert-moderate.png' );
}
.alert-minor {
  background-image: url( '/images/alert-minor.png' );
}
