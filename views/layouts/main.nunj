<!doctype html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>
    <nav class="top-nav">
      {% block top_nav %}
      {% if _homepage %}<h1{% else %}<p{% endif %} class="site-title">
        MBTAwesome
      {% if _homepage %}</h1>{% else %}</p>{% endif %}
      {% endblock %}
    </nav>

    <div class="container">
      {% block main %}
        {# Spinner displays until client app initializes #}
        <div class="loading-spinner">
          <p>Loading</p>
          <div class="rotating-plane"></div>
        </div>
      {% endblock %}
    </div>

    <script>
      {% block fixtures %}{% endblock %}
    </script>
    <script src="/js/vendor/lodash/dist/lodash.underscore.min.js"></script>
    <script src="/js/vendor/jquery/dist/jquery.min.js"></script>
    <script src="/js/vendor/backbone/backbone.js"></script>
    {% block scripts %}
      <script src="/js/app.js"></script>
    {% endblock %}
  </body>
</html>
